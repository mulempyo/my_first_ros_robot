<?xml version="1.0"?>
<robot name="KWJBot">
    <link name="base_footprint"/>
   
    <joint name="base_joint" type="fixed">
       <parent link="base_footprint"/>
       <child link="base_link"/>
    </joint>
    <joint name="left_wheel_joint" type="continuous">
      <origin xyz="-0.0 0.0 0.0" rpy="0 0 0"/>
      <parent link="base_link"/>
      <child link="left_wheel"/>
      <axis xyz="1 0 0"/>
    </joint>

    <joint name="right_wheel_joint" type="continuous">
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
      <parent link="base_link"/>
      <child link="right_wheel"/>
      <axis xyz="1 0 0"/>
    </joint>

    <link name="base_link">
       <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="1" />
        <inertia ixx="0.0" ixy="0" ixz="0" iyy="0.0" iyz="0" izz="0" /> 
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.2 0.2 0.13"/>
        </geometry>
        <material name="white">
          <color rgba="1 1 1 1"/>
        </material>
      </visual>
    </link>
      
    <link name="left_wheel">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.1" />
        <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01" /> 
      </inertial>
      <collision>
        <origin xyz="0.05 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.03" length="0.01"/>
        </geometry>
      </collision>
      <visual>
        <origin xyz="0.05 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.015" length="0.01"/>
        </geometry>
        <material name="grey">
          <color rgba="0.5 0.5 0.5 1"/>
        </material>
      </visual>
    </link>
    
    <link name="right_wheel">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.1" />
        <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01" /> 
      </inertial>
      <collision>
        <origin xyz="0.05 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.03" length="0.01"/>
        </geometry>
      </collision>
      <visual>
        <origin xyz="0.05 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.015" length="0.01"/>
        </geometry>
        <material name="grey">
          <color rgba="0.5 0.5 0.5 1"/>
        </material>
      </visual>
    </link>
    

</robot>
